{
	"name": "Terraform",
	"image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.11",
	"remoteEnv": {
		"PATH": "/home/vscode/.local/bin:${containerEnv:PATH}" // give our installed Python modules precedence
	},
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"[terraform]": {
					"editor.formatOnSave": true
				}
			},
			"extensions": [
				"hashicorp.terraform",
				"redhat.vscode-yaml",
				"github.copilot"
			]
		}
	},
	"features": {
		"terraform": {
			"version": "1.5.2",
			"tflint": "latest",
			"terragrunt": "0.35.6"
		}
	},
	"remoteUser": "vscode"
}