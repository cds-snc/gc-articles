    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "inquirer": "^8.1.2",
    "prettier": "^2.3.2",
    "replace-in-file": "^6.2.0",
    "request-promise": "^0.4.1",
    "shelljs": "^0.8.4",
    "showdown": "^1.9.1",
    "yargs": "^17.1.1",
    "cypress": "^8.4.1",
    "cypress-wp-test-utils": "^0.3.0",
    "cypress-xpath": "^1.6.2",
