{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "outDir": "./build/",
        "noImplicitAny": false,
        "baseUrl": "src",
    },
    "exclude": ["node_modules"],
    "include": ["src/*/"]
}

